<!--pages/address/address.wxml-->
<view class="addAddressBox">
    <form bindreset="formReset" bindsubmit="formSubmit">
        <view class="information">
            <text class="infoTit">联系人</text>
            <input class="infoInpt" name="userName" type="text" placeholder="姓名"  value="{{add_serName}}"/>
        </view>
        <view class="information">
            <text class="infoTit">手机号码</text>
            <input class="infoInpt" name="phone" type="text" placeholder="11位手机号码" value="{{add_telNumber}}"/>
        </view>
        <view class="information" bindtap="selectDistrict">
            <text class="infoTit">选择地区</text>
            <input class="infoInpt" type="text" disabled  value="{{areaInfo}}"/>
        </view>
        <view class="information">
            <text class="infoTit">详细地址</text>
            <input class="infoInpt" name="detail" type="text" placeholder="街道门牌信息" value="{{add_detailInfo}}"/>
        </view>
        <view class="information">
            <text class="infoTit">邮政编号</text>
            <input class="infoInpt" type="text" placeholder="如需备注请输入" value="{{add_postalCode}}"/>
        </view>
        <view class="btnGroup">
            <button class="save" formType="submit" disabled="{{disabled}}">保存</button>
            <button class="fetch" bindtap="chooseAddress">从微信中读取</button>
            <button class="primary" formType="reset">取消</button>
        </view>
    </form>

    <view class="backdrop" wx:if="{{addressMenuIsShow}}">
        <view class="picker-view">
            <view style="height:10% ;width:95%;margin-top:10rpx">
                <text catchtap="cityCancel">取消</text>
                <text style="float: right" catchtap="citySure">确定</text>
            </view>
            <picker-view style="width: 100%; height: 300px;" bindchange="cityChange" value="{{value}}" wx:key="">
                <picker-view-column>
                    <view wx:for="{{provinces}}" class="picker-item">
                    {{item.name}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view wx:for="{{citys}}" class="picker-item" wx:key="">
                    {{item.name}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view wx:for="{{areas}}" class="picker-item" wx:key="">
                    {{item.name}}</view>
                </picker-view-column>
            </picker-view>
        </view>
    </view>

</view>
