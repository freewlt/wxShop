/* pages/home/home.wxss */
page{
    font-family:-apple-system-font, Helvetica Neue, Helvetica, sans-serif;
    font-size:10pt;
    line-height:150%;
    min-height:100%;
    position:relative;
    display:flex;
    flex-direction:column;
    align-items:stretch;
}
.container{
    position: relative;
    width: 100%;
    height: 100%;
    align-items: stretch;
    overflow: hidden;
    justify-content: space-between;
    box-sizing: border-box;
}
/**轮播图**/
.banner{  
    position: relative; 
    clear: both;
    width: 100%;
}
.banner .slide-image{
    width: 100%;
    height: 100%;
}
.banner  swiper{
    height: 650rpx;
}
.swiper-container .dots{  
    position: absolute;  
    left: 0;  
    right: 0;  
    bottom: 150rpx;  
    display: flex;  
    justify-content: center;  
}  
.swiper-container .dots .dot{  
    margin: 0 8rpx;  
    width: 16rpx;  
    height: 5rpx;  
    background: #fff;  
    transition: all .6s;  
    opacity: .5;
}  
.swiper-container .dots .dot.active{  
    width: 32;  
    opacity: 1;
    background: #fff
}
/* 导航 */
.nav{
    position: absolute;
    bottom: 0;
    z-index: 10;
    width: 100%;
    border-radius: 30rpx 30rpx 0 0;
    font-size: 0;
    background: #fff;
}
.nav navigator{
    display: inline-block;
    width: 25%!important;
    height: 100%;
    text-align: center;
    padding: 20rpx 0;
}
.nav .navPic{
    display: block;
    width: 50rpx;
    height: 50rpx;
    margin: 0 auto;
    padding-bottom: 10rpx;
}
.nav .navTxt{
    clear: both;
    font-size: 28rpx;
}
.lineBox{
    z-index: 11;
    position: relative;
    height: 10rpx;
    background: #f5f5f5
}

/* 商品模板 */
.shopList{
    float:left;
    width: 100%;
    font-size: 0;
}
.shopList .listTit{
    display: block;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 28rpx;
    border-bottom: 1rpx solid #f5f5f5;
    
}
.shopList .shopBox{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.shopList .shopBox .listBox{
    position: relative;
    width: 50%; 
    padding: 0 30rpx;
    height: 200rpx;
    box-sizing: border-box;
    border-right: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
}
.shopList .listBox:nth-child(even){
    border-right: none
}
.shopList .listBox text{
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 26rpx;

}
.shopList .listBox .title{
    width:100%;
    padding: 16rpx 0 0;
}
.shopList .listBox .types{
    color: #999;
}
.shopList .listBox .feature{
    display: inline;
    padding: 5rpx 10rpx;
    background:#b3a078;
    color: #fff;
    font-size: 22rpx;
    border-radius: 10rpx;
}
.shopList .listBox .pic{
    z-index: -1;
    position: absolute;
    bottom: 0;
    right: 5%;
    width: 120rpx;
    height: 140rpx;
}
/* 全民砍价 */
.shopListBargain .shopBox {
}
.shopListBargain .shopBox .listBox{
    position: relative;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    width: 100%; 
    padding: 15rpx 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #f5f5f5;
}

.picBargain{
    width: 230rpx;
    height: 220rpx;   
}
.priceBargain{
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}