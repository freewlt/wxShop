/* pages/home/home.wxss */
page{
    font-family:-apple-system-font, Helvetica Neue, Helvetica, sans-serif;
    font-size:10pt;
    line-height:150%;
    min-height:100%;
    position:relative;
    display:flex;
    flex-direction:column;
    align-items:stretch;
}
.container{
    flex:1;
    display:flex;
    flex-direction:column;
    position: relative;
    width: 100%;
    height: 100%;
    align-items:stretch;
    overflow:hidden;
    justify-content:space-between;
    box-sizing:border-box;
}
/**轮播图**/
.banner{  
    position: relative; 
    clear:both;
    width:100%;
}
.banner .slide-image{
    width:100%;
    height:100%;
}
.banner  swiper{
    height:650rpx;
}
.swiper-container .dots{  
    position: absolute;  
    left: 0;  
    right: 0;  
    bottom: 150rpx;  
    display: flex;  
    justify-content: center;  
  }  
  .swiper-container .dots .dot{  
    margin: 0 8rpx;  
    width: 16rpx;  
    height: 5rpx;  
    background: #fff;  
    transition: all .6s;  
    opacity: .5;
  }  
  .swiper-container .dots .dot.active{  
    width: 32;  
    opacity: 1;
    background: #fff
  }
  /* 导航 */
  .nav{
      position: absolute;
      bottom: 0;
      z-index: 10;
      width: 100%;
      border-radius: 30rpx 30rpx 0 0;
      font-size: 0;
      background: #fff;
  }
  .nav navigator{
      display: inline-block;
      width: 25%!important;
      height: 100%;
      text-align: center;
      padding: 20rpx 0;
  }
  .nav .navPic{
    display: block;
    width:50rpx;
    height:50rpx;
    margin:0 auto;
    padding-bottom:10rpx;
  }
  .nav .navTxt{
      clear: both;
      font-size: 28rpx;
  }
  .lineBox{
      height: 10rpx;
      background: #f5f5f5
  }