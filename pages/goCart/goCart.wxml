<!--pages/goCart/goCart.wxml-->
<view class="cartBox">
    <view class="" wx:if="{{isHas}}">
        <view class="goCart">
            <view class="cart"></view>
            <text class='emptyText'>购物车空空如也</text> 
        </view>
    </view>
    <view class="cartShopping">
        <view class="listBox" wx:for="{{cartList}}" wx:key="" bindtap="herfBtn">
            <image class="picBargain" src ="{{item.list_pic_url}}"/>
            <text class="title"> {{item.name}}</text>
            <text class="types"> {{item.goods_brief}}</text>
            <text class="price"> ￥{{item.retail_price}}</text>
        </view>
    </view>
    <view class="shopList moods">
        <view class="shopBox">
            <view class="listBox" wx:for="{{hotGoods}}" wx:key="" bindtap="herfBtn">
                <image class="picBargain" src ="{{item.list_pic_url}}"/>
                <text class="title"> {{item.name}}</text>
                <text class="types"> {{item.goods_brief}}</text>
                <text class="price"> ￥{{item.retail_price}}</text>
            </view>
        </view>
    </view>
</view>
