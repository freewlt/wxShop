/* pages/detail/detail.wxss */

@import "/pages/index/index.wxss";


.banner swiper {
    height: 450rpx;
}
.swiper-container .dots .dot {
    background:#00f;
}

.swiper-container .dots .dot.active{  
    background: #000066
}
.bannerName{
    width: 94%;
    padding: 1% 3%;
    background: #fff;
}
.bannerName .name{
    display: block;
    font-size:30rpx;
}
.bannerName .type{
    color: #999;
    font-size:24rpx;
}

.bargainDetail{
    display: -webkit-flex; /* Safari */
    display: flex;
    width: 94%;
    padding: 0 3%;
    margin: 0 auto;
    font-size: 28rpx;
    color: #fff;
    background: #a0302f;
}
.bargainDetail .center, .minPrice, .num{
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx 10rpx; 
}
.minPrice{
    margin-top: 20rpx;
}
.minPrice .price{
    font-size: 35rpx;
}
.bargainDetail .center{
    flex-shrink: 1;
}
.bargainDetail .center text{
    display: block;
}
.bargainDetail .num{
    float: right;
    margin-top: 20rpx;
    text-align: right;
    padding-right: 0
}
.bargainDetail .center .sourcePrice{
    text-decoration:line-through;
}
.doubleLineBox{
    height: 20rpx;
    background: #f6f7f2;
}
.flow{
    width: 94%;
    padding: 0 3%;
    background: #fffffb;
}
.flow .title{
    display: block;
    width: 100%;
    padding: 20rpx;
    background: #fff;
    font-size: 35rpx;

}
.flow .flowStep{
    display: -webkit-flex; /* Safari */
    display: flex;
}
.flow .flowStep .flowBlock{
    width: 23%;
    padding: 3% 1%;
    flex-direction: row;
    justify-content: space-between;
    text-align: center;
}
.flow .flowStep .picStep{
    display: block;
    width: 60rpx;
    height: 64rpx;
    margin: 0 auto;
}
.flow .flowStep text{
    display: block;
}
.choosespe .title{
    display: inline-block;
    vertical-align: middle;
    width: 85%;
    padding: 30rpx 20rpx;
    font-size: 28rpx;
}
.arrow{
    display: inline-block;
    vertical-align: middle;
    width: 50rpx;
    height: 50rpx;
}
.product{
    clear: both;
    width: 100%;
    padding: 20rpx 0;
}
.product .navProduct{
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: space-around;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #ccc;
    text-align: center;
    font-weight: bold;
}
.product .navProduct .swiper-tab-item{
    display: inline-block;
    width: 50%;
    height: 100%;
    text-align: center
}
.product .navProduct .select{
    color: #a0302f;
    border-bottom: 2rpx solid #a0302f;
}
 
.product swiper{
    min-height: 1400rpx;
}

.product .productIntro{
    display: inline-block;
    vertical-align: middle;
    width: 50%;
    margin: 0 auto;
    text-align:center;
}
.product .productIntro .picIntro{
    display: block;
    width: 92%;
    height: 200rpx;
    margin: 0 auto;
}
.product .productIntro .nameIntro{
    display: block;
    width: 90%;
    margin: 0 auto;
}

.product .productIntro:first-child, .product .productIntro:last-child {
    display: block;
    width: 92%;
    height: 560rpx;
    margin: 0 auto;
}
.product .productIntro:first-child .picIntro, .product .productIntro:last-child .picIntro{
    height: 460rpx;
}
.description{
    width: 100%;
    margin: 0 auto;
    text-align: center;
}
.description .discuss{
    width: 208rpx;
    height: 200rpx;
    padding-top: 80rpx;
}
.description .discussTxt{
    clear: both;
    float:left;
    width: 90%;
    margin:20rpx auto;
    
}
.tipDetail{
    position:fixed;
    bottom:0;
    left:0;
    width: 100%;
    height: 80rpx;
    background: #fff;
    border-top: 1px solid #eee
}
.tipDetail .tipBtn{
    display: block;
    float: left;
    width: 15%;
    height: 100%;
    text-align: center;
    border-right: 1px solid #eee;
}
.tipDetail .tipBtn:last-child{
    border-right: none;
}

.tipDetail .serviceBtn .service, .collBtn .collect{
    width: 50rpx;
    height: 50rpx;
    padding: 15rpx 0;
}
.tipDetail .originPrice{
    width: 29%;
}
.tipDetail .startGrop{
    width: 40%;
    height: 80rpx;
    color: #fff;
    background: #a0302f;
}
.tipDetail .originPrice .price{
    display: block;
    padding:5rpx 30rpx 0;

}
.tipDetail .startGrop .price{
    display: block;
    color: #fff;
    padding:5rpx 0 0;
}









/* 弹窗 */
.isShow{
    z-index: 12;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
}
.isShowCon{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
}
.hide{
    display: none;
}
.show{
    display: block;
}

.isShowCon .nameBargain{
    display:block;
    padding:40rpx 0 20rpx;
}

.isShowCon .selectType{
    width: 100%;
    padding: 30rpx;
    border-bottom: 1px solid #ccc;
}
.isShowCon .selectType text{
    display: block;
    font-size: 30rpx;
}
.isShowCon .selectType .buttonType{
    display: inline-block;
    vertical-align: middle;
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin: 15rpx 15rpx 0 0;
    text-align: center;
    box-sizing: border-box;
    border: 1px solid #fff;
    background:#fff;
    border-radius: 4rpx;
}
.isShowCon .selectNum{
    display: flex;
    flex-wrap: wrap;
    justify-content:  space-between;
    align-items: center;
}
.isShowCon .selectNum .numBox{
    padding-right: 70rpx;
}
.isShowCon .selectNum .numBox text{
    display: inline-block;
    vertical-align: middle;
    width:80rpx;
    line-height: 50rpx;
    text-align: center;
    border: 1px solid #ccc;
    border-right: none;  
}
.isShowCon .selectNum .numBox text:last-child{
    border: 1px solid #ccc;
}
.isShowCon .selectNum .numBox .number{
    display: inline-block;
    vertical-align: middle;
    width:80rpx;
    height: 50rpx;
    text-align: center;
    border: 1px solid #ccc;
    border-right: none;
    box-sizing: border-box;
    background: #fff;
}
.isShowCon .addBtn{
    display: block;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: #b02832;
}
.isShowCon .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.isShowCon .disabled{  
    color: #ccc;  
}  
.isShowCon .selectType .active{
    color: #a0302f; 
    border:1px solid #a0302f;
}

    