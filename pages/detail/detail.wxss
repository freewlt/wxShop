/* pages/detail/detail.wxss */

@import "/pages/index/index.wxss";


.banner swiper {
    height: 450rpx;
}
.swiper-container .dots .dot {
    background:#00f;
}

.swiper-container .dots .dot.active{  
    background: #000066
}
.bannerName{
    width: 94%;
    padding: 1% 3%;
    background: #fff;
}
.bannerName .name{
    display: block;
    font-size:30rpx;
}
.bannerName .type{
    color: #999;
    font-size:24rpx;
}

.bargainDetail{
    display: -webkit-flex; /* Safari */
    display: flex;
    width: 94%;
    padding: 0 3%;
    margin: 0 auto;
    font-size: 28rpx;
    color: #fff;
    background: #a0302f;
}
.bargainDetail .center, .minPrice, .num{
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx 10rpx; 
}
.minPrice{
    margin-top: 20rpx;
}
.minPrice .price{
    font-size: 35rpx;
}
.bargainDetail .center{
    flex-shrink: 1;
}
.bargainDetail .center text{
    display: block;
}
.bargainDetail .num{
    float: right;
    margin-top: 20rpx;
    text-align: right;
    padding-right: 0
}
.bargainDetail .center .sourcePrice{
    text-decoration:line-through;
}
.doubleLineBox{
    height: 20rpx;
    background: #f6f7f2;
}
.flow{
    width: 94%;
    padding: 0 3%;
    background: #fffffb;
}
.flow .title{
    display: block;
    width: 100%;
    padding: 20rpx;
    background: #fff;
    font-size: 35rpx;

}
.flow .flowStep{
    display: -webkit-flex; /* Safari */
    display: flex;
}
.flow .flowStep .flowBlock{
    width: 23%;
    padding: 3% 1%;
    flex-direction: row;
    justify-content: space-between;
    text-align: center;
}
.flow .flowStep .picStep{
    display: block;
    width: 60rpx;
    height: 64rpx;
    margin: 0 auto;
}
.flow .flowStep text{
    display: block;
}
.choosespe .title{
    display: inline-block;
    vertical-align: middle;
    width: 85%;
    padding: 30rpx 20rpx;
    font-size: 28rpx;
}
.arrow{
    display: inline-block;
    vertical-align: middle;
    width: 50rpx;
    height: 50rpx;
}



  
