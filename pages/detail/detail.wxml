<!--pages/detail/detail.wxml-->

<view class="container">
    <!--轮播图-->
    <view class="banner swiper-container">
        <swiper autoplay="{{autoplay}}" interval="{{interval}}"
                duration="{{duration}}" bindchange="swiperchange">
            <block wx:for="{{relatedGoods}}" wx:key="{{item.id}}">
                <swiper-item>
                    <image src="{{item.list_pic_url}}" class="slide-image" data-id="{{item.businessId}}"/>
                </swiper-item>
            </block>
        </swiper>
        <view class="dots">  
            <block wx:for="{{relatedGoods}}" wx:key="unique">  
                <view class="dot{{index == current ? ' active' : ''}}"></view>  
            </block>  
        </view> 
        <view class="bannerName">
            <text class="name">{{name}}</text>
            <text class="type">{{id}}</text>
            <image src="{{image_url}}" class="slide-image"/>
        </view> 
    </view>
    <view class="bargainDetail"></view>
     <view class="lineBox"></view>
</view>
